<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/image"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/image"
        android:src="@drawable/image"
        android:scaleType="centerCrop" />

    <com.github.leejay.cornerlabelview.CornerLabelView
        android:id="@+id/label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/image"
        android:layout_alignTop="@id/image"
        android:padding="6dp"
        android:background="@android:color/holo_red_dark"
        app:clv_text="匹配度 90%"
        app:clv_thickness="40dp"
        app:clv_distance="22dp"
        app:clv_gravity="rightTop" />

    <com.github.leejay.cornerlabelview.CornerLabelView
        android:id="@+id/label2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/image"
        android:paddingLeft="8dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:background="@android:color/holo_red_dark"
        app:clv_text="匹配度 90%"
        app:clv_thickness="40dp"
        app:clv_distance="22dp"
        app:clv_gravity="leftTop" />

    <com.github.leejay.cornerlabelview.CornerLabelView2
        android:id="@+id/label3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/image2"
        android:layout_alignTop="@id/image2"
        android:padding="4dp"
        android:background="@android:color/holo_red_dark"
        app:clv_text="推广"
        app:clv_thickness="25dp"
        app:clv_distance="18dp"
        app:clv_gravity="rightTop" />

    <com.github.leejay.cornerlabelview.CornerLabelView2
        android:id="@+id/label4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/image2"
        android:padding="4dp"
        android:background="@android:color/holo_red_dark"
        app:clv_text="推广"
        app:clv_thickness="25dp"
        app:clv_distance="18dp"
        app:clv_gravity="leftTop" />
</RelativeLayout>
